  "license": "MIT",
  "dependencies": {
    "body-parser": "~1.0.1",
    "express": "~4.0.0",
    "mongoose": "~4.6.8",
    "morgan": "~1.0.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "prettier": "^1.5.3"
  },
  "lint-staged": {
    "client/src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
